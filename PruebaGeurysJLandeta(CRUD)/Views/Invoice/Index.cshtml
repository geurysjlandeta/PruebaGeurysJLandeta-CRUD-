@model IEnumerable<PruebaGeurysJLandeta_CRUD_.Models.Invoice>

@{
    ViewBag.Title = "Invoice";
}

<h2>Invoice</h2>

<p>
    @Html.ActionLink("Add Invoice", "InvoiceDetail")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalItbis)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TotalItbis)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SubTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            <a href="~/CustomerType/EditCustomerType/@item.Id" class="btn btn-default">Edit</a>
            <a href="~/CustomerType/DeleteCustomerType/@item.Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
}

</table>
